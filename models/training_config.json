{
  "train_test_split": 0.8,
  "random_seed": 42,
  "batch_size": 32,
  "shuffle": true,
  "num_workers": 4,
  "validation_interval": 1,
  "use_gpu": true,
  "use_tensorrt": true,
  
  "export": {
    "tensorrt_fp16": true,
    "tensorrt_cache_path": "models/trt_cache",
    "save_checkpoints": true,
    "checkpoint_interval": 5,
    "onnx_opset": 12,
    "export_formats": ["onnx", "tensorrt"]
  },
  
  "inference": {
    "batch_size": 128,
    "use_fp16": true,
    "max_batch_latency_ms": 3,
    "inference_threads": 4,
    "fast_path_threshold": 0.70,
    "max_candidates": 500,
    "accurate_path_threshold": 0.75,
    "use_tensorrt": true,
    "tensorrt_cache_path": "models/trt_cache",
    "pin_memory": true,
    "cudnn_benchmark": true,
    "max_workspace_size_gb": 8,
    "dynamic_shapes": true,
    "precision": "fp16"
  },
  
  "tensorrt": {
    "engine_file_path": "models/trt_cache/gbdt_engine.trt",
    "precision": "fp16",
    "max_workspace_size_gb": 8,
    "dla_core": 0,
    "gpu_device_id": 0,
    "use_dla": false,
    "use_int8": false,
    "int8_calibration_file": "models/trt_cache/calibration.npz",
    "dynamic_shapes": true,
    "optimization_level": 3,
    "strict_types": false,
    "profiling_verbosity": "detailed"
  },
  
  "data_sources": {
    "polygon": {
      "max_symbols": 3000,
      "use_cache": true,
      "cache_expiry_hours": 24,
      "batch_processing": {
        "enabled": true,
        "batch_size": 500
      }
    }
  },
  
  "default_symbols": [
    "AAPL", "MSFT", "GOOG", "AMZN", "TSLA",
    "META", "NVDA", "JPM", "V", "UNH",
    "HD", "PG", "DIS", "MA", "BAC",
    "XOM", "VZ", "ADBE", "NFLX", "PFE"
  ],
  
  "symbol_distribution": {
    "use_all_available": true,
    "validate_coverage": true,
    "min_coverage_percent": 95
  },
  
  "hardware": {
    "device": "cuda:0",
    "memory_limit_mb": 80000,
    "use_tensor_cores": true,
    "numa_aware": true,
    "numa_node_mapping": {
      "inference": 0,
      "training": 0
    },
    "gpu_id": 0
  }
}